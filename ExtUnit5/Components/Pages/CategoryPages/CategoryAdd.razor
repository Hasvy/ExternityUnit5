@using Entities
@using System.ComponentModel.DataAnnotations

@page "/addcategory"
@rendermode InteractiveServer

<h3>Add Category</h3>

<EditForm FormName="AddCategory" Model="@categoryToAdd" OnValidSubmit="Submit">
    <DataAnnotationsValidator />

    <div class="form-group">
        <label for="name">Název</label>
        <InputText id="name" class="form-control" @bind-Value="categoryToAdd.Name" />
        <ValidationMessage For="@(() => categoryToAdd.Name)" />
    </div>

    <div class="form-group">
        <label for="description">Popis</label>
        <InputTextArea id="description" class="form-control" @bind-Value="categoryToAdd.Description" />
        <ValidationMessage For="@(() => categoryToAdd.Description)" />
    </div>

    <button type="submit" class="btn btn-primary">Uložit</button>

</EditForm>